<div class="tile box is-vertical is-4 ml-4 p-3">
  <div class="p-5">
    <h1 class="title"><%= action_controller_title %></h1>  
    <%= form_with(model: publisher, class:"form") do |form| %>
      <% if publisher.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(publisher.errors.count, "error") %> prohibited this publisher from being saved:</h2>

          <ul>
            <% publisher.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name, class:"label" %>
        <div class="control">
          <%= form.text_field :name, class:"input is-small" %>
        </div>
      </div>

      <!--<div class="actions control is-flex-direction-row is-align-content-end is-align-content-space-around">-->
        <!--<%#= form.submit "Create #{controller_single_camel}", class: "button is-link is-primary is-small" %>-->
      <!--</div>-->
      <div class="actions control">
        <% if action_name == "new" %>
          <%= form.submit "Add #{controller_single_camel}", class:"button is-link is-primary" %>
        <% else %>
          <%= form.submit "Update", class:"button is-link is-primary" %>
        <% end %>
      </div>

    <% end %>
  </div>
</div>
