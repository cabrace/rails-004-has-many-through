<p id="notice"><%= notice %></p>

<%= render "layouts/page/title_new_path" %>

<table class="table is-cell-bordered no-background">
  <thead>
    <tr>
      <th colspan="1">Date</th>
      <th colspan="1">Region</th>
      <th colspan="2">Author</th>
      <th colspan="2">Book</th>
      <th colspan="2">Publisher</th>
      <th colspan="3" rowspan="2" class="has-text-centered" >Actions</th>
    </tr>
    <tr>
      <th>Date</th>
      <th>Region</th>
      <th>ID</th>
      <th>Name</th>
      <th>ID</th>
      <th>Name</th>
      <th>ID</th>
      <th>Name</th>
    </tr>

  </thead>

  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.date %></td>
        <td><%= publication.region_name %></td>
        <td><%= publication.author_id %></td>
        <td><%= publication.author_name %></td>
        <td><%= publication.book_id %></td>
        <td><%= publication.book_title %></td>
        <td><%= publication.publisher_id %></td>
        <td><%= publication.publisher_name %></td>
        <td><%= link_to 'Show', publication %></td>
        <td><%= link_to 'Edit', edit_publication_path(publication) %></td>
        <td><%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

